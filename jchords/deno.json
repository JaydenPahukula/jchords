{
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:vite",
    "build": "deno run -A --node-modules-dir npm:vite build",
    "preview": "deno task build && deno run -A --node-modules-dir npm:vite preview"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "imports": {
    "@babel/plugin-transform-react-jsx": "npm:@babel/plugin-transform-react-jsx@^7.25.9",
    "@babel/plugin-transform-react-jsx-development": "npm:@babel/plugin-transform-react-jsx-development@^7.25.9",
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.0",
    "@preact/preset-vite": "npm:@preact/preset-vite@^2.9.4",
    "autoprefixer": "npm:autoprefixer@^10.4.20",
    "babel-plugin-transform-hook-names": "npm:babel-plugin-transform-hook-names@^1.0.2",
    "postcss": "npm:postcss@^8.5.1",
    "preact": "npm:preact@^10.25.4",
    "tailwindcss": "npm:tailwindcss@^3.4.17",
    "vite": "npm:vite@^6.0.1",
    "src/": "./src/"
  },
  "workspace": ["src/shared"],
  "nodeModulesDir": "auto"
}
