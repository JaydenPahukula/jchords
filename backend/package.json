{
  "name": "jchords-backend",
  "type": "commonjs",
  "watch": {
    "build": {
      "patterns": [
        "src",
        "../shared"
      ],
      "extensions": "ts,tsx",
      "silent": true
    }
  },
  "scripts": {
    "build": "esbuild src/index.ts --outfile=dist/index.js --bundle --sourcemap --platform=node --target=node22 --format=cjs",
    "dev": "esbuild src/index.ts --outfile=dist/index.js --bundle --sourcemap --platform=node --target=node22 --format=cjs --watch",
    "deploy": "npm run build && firebase deploy --only functions"
  },
  "main": "dist/index.js",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "firebase-admin": "^13.1.0",
    "firebase-functions": "^6.3.2",
    "shared": "file:../shared"
  },
  "devDependencies": {
    "esbuild": "^0.25.0",
    "npm-watch": "^0.13.0"
  }
}
