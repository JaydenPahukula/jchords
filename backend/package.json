{
  "name": "jchords-backend",
  "type": "module",
  "watch": {
    "build": {
      "patterns": [
        "src",
        "../shared"
      ],
      "extensions": "ts,tsx",
      "silent": true
    }
  },
  "scripts": {
    "build": "ncc build src/index.ts -o dist",
    "dev": "npm-watch build",
    "deploy": "npm run build && firebase deploy --only functions"
  },
  "main": "dist/index.js",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "firebase-admin": "^13.1.0",
    "firebase-functions": "^6.3.2",
    "shared": "file:../shared"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.3",
    "npm-watch": "^0.13.0"
  }
}
