{
  "hosting": {
    "public": "jchords/dist",
    "rewrites": [
      {
        "source": "/api/{,/**}",
        "function": {
          "functionId": "api"
        }
      },
      {
        "source": "/song/**",
        "destination": "/song/index.html"
      },
      {
        "source": "/editor",
        "destination": "/editor/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore/firestore.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  },
  "functions": [
    {
      "source": "backend",
      "codebase": "default",
      "runtime": "nodejs22"
    }
  ]
}
