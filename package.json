{
  "name": "jchords",
  "type": "module",
  "private": true,
  "scripts": {
    "format": "prettier --write './**/*.{js,ts,tsx,html,css,svg,json}' | grep -v ' (unchanged)'",
    "emulator": "firebase emulators:start --only 'firestore,functions' --import=firestore/testdata --export-on-exit",
    "dev-jchords": "npm run dev --prefix jchords/",
    "dev-backend": "npm run dev --prefix backend/",
    "deploy-jchords": "npm run deploy --prefix jchords/",
    "deploy-backend": "npm run deploy --prefix backend/",
    "deploy-firestore-rules": "firebase deploy --only firestore:rules"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "typescript": "^5.6.3"
  },
  "workspaces": [
    "jchords",
    "backend",
    "shared"
  ]
}
