{
  "name": "jchords",
  "scripts": {
    "format": "prettier --write 'src/**/*' index.html",
    "lint": "eslint --ext js,ts,jsx,tsx ./src/",
    "dev": "vite",
    "build": "npm run lint && vite build",
    "preview": "npm run build && vite preview",
    "deploy": "npm run build && firebase deploy --only hosting:main",
    "dev-editor": "vite --config ./vite.config.editor.js",
    "build-editor": "npm run lint && vite build --config ./vite.config.editor.js && mv ./dist-editor/index-editor.html ./dist-editor/index.html",
    "preview-editor": "npm run build-editor && vite preview --config ./vite.config.editor.js",
    "deploy-editor": "npm run build-editor && firebase deploy --only hosting:editor"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.0.0",
    "typescript": "^5.5.3",
    "vite": "^5.3.4"
  },
  "dependencies": {
    "firebase": "^10.12.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.25.1"
  }
}
